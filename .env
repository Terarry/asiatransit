# .env file

# Ваш токен Telegram Bot API. Получите его у @BotFather.
TELEGRAM_BOT_TOKEN="ВАШ_ТОКЕН_API"

# Email адрес менеджера для получения заявок и вопросов.
MANAGER_EMAIL="менеджер@example.com"

# URL к файлу с условиями покупки и доставки (например, с GitHub Raw).
# Убедитесь, что это прямая ссылка на raw-текст.
CONDITIONS_FILE_URL="https://raw.githubusercontent.com/ваш_пользователь/ваш_репозиторий/main/usloviya.txt"

# Включить (true) или отключить (false) сохранение заявок в локальный файл.
SAVE_APPLICATIONS_TO_FILE=true

# Путь к файлу для сохранения заявок (относительно webhook.php).
# Убедитесь, что у PHP есть права на запись в этот файл.
APPLICATIONS_LOG_FILE="applications.log"
